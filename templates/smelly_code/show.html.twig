{% extends 'base.html.twig' %}

{% block body %}
    {% if smelly_code is not null %}
        Up votes : {{ smelly_code.upVotes|length }}
        <br/>
        Down votes : {{ smelly_code.downvotes|length }}

        <a href="{{ path('smelly_code_skip', {id: smelly_code.id}) }}">Skip</a>
        {% if is_granted('vote', smelly_code) %}
            <a href="{{ path('smelly_code_up_vote', {id: smelly_code.id}) }}">Up vote</a>
            <a href="{{ path('smelly_code_down_vote', {id: smelly_code.id}) }}">Down vote</a>
        {% endif %}

        <embed src="https://carbon.now.sh/embed/{{ smelly_code|smelly_code }}"/>

    {% endif %}
{% endblock %}
